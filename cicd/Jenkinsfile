
def functions

pipeline {
		agent any
		stages {
				stage('Env Variables') {
						steps {
							functions = load("cicd/functions.groovy")
								sh 'printenv'
						}
				}
				stage('Build') {
						steps {
								echo 'Building...'
						}
				}
				stage('Tagging') {
            steps {
							script {
                functions.tagBuild()
							}
            }
        }
				stage('Test') {
						steps {
								echo 'Testing...'
						}
				}
				stage('Deploy') {
						steps {
								echo 'Deploying....'
						}
				}
		}
}